<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.snake.BoardController"
      onKeyPressed="#onKeyPressed"
      stylesheets="@game-view.css">
    <Label fx:id="scoreLabel" styleClass="scoreLabel">Wynik: </Label>
    <Button onMouseClicked="#startButton" styleClass="startButton" focusTraversable="false" fx:id="startButton">Start</Button>
    <Canvas fx:id="boardCanvas" width="500" height="500" />
</VBox>
